<UserControl x:Class="DEISE.Controls.DesignerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:DEISE.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderThickness="1.5" BorderBrush="#9C9D9D" CornerRadius="3" Name="mask">
        <Grid>
            <Grid Name="HeaderGrid" Height="22" VerticalAlignment="Top" IsHitTestVisible="False" Background="#3B3D3A">
                <TextBlock Name="tbTitel" Foreground="#ABABAA" Text="{Binding Titel}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            </Grid>
            <ContentControl Margin="0,22,0,0" Name="ContentGrid">
                
            </ContentControl>
        </Grid>
    </Border>
</UserControl>